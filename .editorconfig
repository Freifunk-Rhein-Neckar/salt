# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tabs
trim_trailing_whitespace = true
insert_final_newline = true

# Salt States
[*.sls]
indent_style = space
indent_size = 2

# Python Scripts
[{*.py,*.py.j2}]
indent_style = space
indent_size = 4

# Templates
[*.jinja]
indent_style = space
indent_size = 2

# Configs
[{*.yml,*.rules,*.rules.j2}]
indent_style = space
indent_size = 2

# Documentation
[*.md]
indent_style = space
indent_size = 2

# Scripts
[{*.sh,*.js}]
indent_style = space
indent_size = 2

# Exceptions
[named.cache]
trim_trailing_whitespace = false
insert_final_newline = unset

[*.gpg]
charset = unset
end_of_line = unset
indent_style = unset
trim_trailing_whitespace = false
insert_final_newline = unset
