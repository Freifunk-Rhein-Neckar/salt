    {%- if param_value | is_list %}
    {{ param_name }}: {{ param_value | tojson }}
    {%- else %}
    {{ param_name }}: {{ param_value }}
    {%- endif %}
    {%- endfor %}
{%- endfor %}
{%- endif %}
{%- endmacro %}

